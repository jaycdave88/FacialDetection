        xmlns:local="clr-namespace:FacialDetection"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <Label x:Name="lbStat"
               Content="STAT:"
               HorizontalAlignment="Left"
               Margin="19,19,0,0"
               VerticalAlignment="Top"
               Height="41"
               Width="61"
               FontSize="21.333" />
        <TextBlock x:Name="txtBStat"
                   HorizontalAlignment="Left"
                   Margin="85,30,0,0"
                   TextWrapping="Wrap"
                   Text=""
                   VerticalAlignment="Top"
                   Width="76"
                   Height="30" />
        <Button x:Name="btnStart"
                Content="Start"
                HorizontalAlignment="Left"
                Margin="435,50,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="btnStart_Click" />
        <Button x:Name="button"
                Content="Button"
                HorizontalAlignment="Left"
                Height="100"
                Margin="174,451,0,-227.889"
                VerticalAlignment="Top"
                Width="75" />
        <Image x:Name="imgVideo"
               Stretch="Fill"
               Margin="151,110,212.444,54.111" />

    </Grid>
</Window>
